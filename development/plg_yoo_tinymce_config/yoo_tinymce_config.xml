<?xml version="1.0" encoding="utf-8"?>
<extension version="4.0" type="plugin" group="system" method="upgrade">

	<name>yoo_tinymce_config</name>
	<author><%= author %></author>
	<creationDate><%= grunt.template.today('yyyy-mm-dd') %></creationDate>
	<copyright>Copyright Â© <%= grunt.template.today('yyyy') %>, <%= author %>, All Rights Reserved.</copyright>
	<license><%= license %></license>
	<authorEmail><%= author %></authorEmail>
	<authorUrl><%= author_url %></authorUrl>
	<version><%= version %></version>
	<description><%= descr %></description>

	<files>
		<filename plugin="yoo_tinymce_config">yoo_tinymce_config.php</filename>
		<folder>assets</folder>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="enable_frontend" type="radio" class="btn-group btn-group-yesno" default="0" label="Enable in frontend" description="">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
